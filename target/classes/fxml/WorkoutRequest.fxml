<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<StackPane prefHeight="850.0" prefWidth="1150.0" styleClass="background-request" stylesheets="@../values/LoginStyle.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.uniroma2.dicii.ezgym.view.guimode.GuiWorkoutRequestView">

    <!-- CONTENITORE CENTRALE -->
    <children>
        <VBox maxWidth="720.0" spacing="15.0" styleClass="hbox-home">
            <padding>
                <Insets bottom="40.0" left="30.0" right="30.0" top="15.0" />
            </padding>

            <!-- Freccia + Titoli -->
            <children>
            <VBox prefHeight="40.0">
               <children>
                        <ImageView fx:id="goToHome" fitHeight="40.0" fitWidth="40.0" onMouseClicked="#onClickGoBack" preserveRatio="true" rotate="180.0">
                            <image>
                                <Image url="@../Icone/right-arrow.png" />
                            </image>
                        </ImageView>
               </children>
            </VBox>
                <VBox alignment="TOP_CENTER">
                    <children>

                        <Text fill="WHITE" text="Richiedi qui la tua scheda">
                            <font>
                                <Font size="30.0" />
                            </font>
                        </Text>
                  <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Inserisci qui i tuoi dati per continuare con la richiesta della scheda">
                     <font>
                        <Font size="21.0" />
                     </font>
                  </Text>
                    </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
                </VBox>

                <!-- SCROLLPANE -->
                <ScrollPane fitToWidth="true" hbarPolicy="NEVER" maxHeight="650.0">
                    <content>
                        <VBox alignment="TOP_CENTER" spacing="25.0">
                            <padding>
                                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                            </padding>

                            <!-- GENERE -->
                            <children>
                                <VBox alignment="CENTER" spacing="10.0">
                                    <children>
                                        <Text fill="WHITE" text="Genere">
                                            <font>
                                                <Font size="20.0" />
                                            </font>
                                        </Text>

                                        <HBox alignment="CENTER" spacing="20.0">
                                            <children>
                                                <ToggleButton fx:id="maleButton" prefHeight="50.0" prefWidth="250.0" text="Maschio" textFill="WHITE">
                                                    <font>
                                                        <Font size="18.0" />
                                                    </font>
                                                </ToggleButton>
                                                <ToggleButton fx:id="femaleButton" prefHeight="50.0" prefWidth="250.0" text="Femmina" textFill="WHITE">
                                                    <font>
                                                        <Font size="18.0" />
                                                    </font>
                                                </ToggleButton>
                                            </children>
                                        </HBox>
                                    </children>
                                </VBox>

                                <!-- ETÀ -->
                                <VBox alignment="CENTER" spacing="10.0">
                                    <children>
                                        <Text fill="WHITE" text="Età">
                                            <font>
                                                <Font size="20.0" />
                                            </font>
                                        </Text>

                                        <StackPane alignment="CENTER_RIGHT" maxWidth="520.0">
                                            <children>
                                                <TextField fx:id="ageField" prefHeight="50.0" promptText="Inserisci la tua età" styleClass="age-field">
                                                    <font>
                                                        <Font size="18.0" />
                                                    </font>
                                                </TextField>
                                                <Text fill="WHITE" text="Anni">
                                                    <font>
                                                        <Font size="18.0" />
                                                    </font>
                                                    <StackPane.margin>
                                                        <Insets right="20.0" />
                                                    </StackPane.margin>
                                                </Text>
                                            </children>
                                        </StackPane>
                                    </children>
                                </VBox>

                                <!-- PESO -->
                                <VBox alignment="CENTER" spacing="10.0">
                                    <children>
                                        <Text fill="WHITE" text="Peso">
                                            <font>
                                                <Font size="20.0" />
                                            </font>
                                        </Text>

                                        <StackPane alignment="CENTER_RIGHT" maxWidth="520.0">
                                            <children>
                                                <TextField fx:id="weightField" prefHeight="50.0" promptText="Inserisci il tuo peso" styleClass="age-field">
                                                    <font>
                                                        <Font size="18.0" />
                                                    </font>
                                                </TextField>
                                                <Text fill="WHITE" text="Kg">
                                                    <font>
                                                        <Font size="18.0" />
                                                    </font>
                                                    <StackPane.margin>
                                                        <Insets right="20.0" />
                                                    </StackPane.margin>
                                                </Text>
                                            </children>
                                        </StackPane>
                                    </children>
                                </VBox>

                                <!-- ALTEZZA -->
                                <VBox alignment="CENTER" spacing="10.0">
                                    <children>
                                        <Text fill="WHITE" text="Altezza">
                                            <font>
                                                <Font size="20.0" />
                                            </font>
                                        </Text>

                                        <StackPane alignment="CENTER_RIGHT" maxWidth="520.0">
                                            <children>
                                                <TextField fx:id="heightField" prefHeight="50.0" promptText="Inserisci la tua altezza" styleClass="age-field">
                                                    <font>
                                                        <Font size="18.0" />
                                                    </font>
                                                </TextField>
                                                <Text fill="WHITE" text="cm">
                                                    <font>
                                                        <Font size="18.0" />
                                                    </font>
                                                    <StackPane.margin>
                                                        <Insets right="20.0" />
                                                    </StackPane.margin>
                                                </Text>
                                            </children>
                                        </StackPane>
                                    </children>
                                </VBox>

                                <!-- OBIETTIVO -->
                                <VBox alignment="CENTER" spacing="10.0">
                                    <children>
                                        <Text fill="WHITE" text="Quale è il tuo obiettivo?">
                                            <font>
                                                <Font size="20.0" />
                                            </font>
                                        </Text>

                                        <HBox alignment="CENTER" spacing="30.0">
                                            <children>
                                                <!-- Colonna sinistra -->
                                                <VBox alignment="TOP_CENTER" spacing="15.0">
                                                    <children>
                                                        <StackPane alignment="TOP_CENTER">
                                                            <children>
                                                                <ToggleButton fx:id="cutButton" prefHeight="70.0" prefWidth="250.0" text="Perdere peso" textFill="WHITE">
                                                                    <font>
                                                                        <Font size="18.0" />
                                                                    </font>
                                                   <padding>
                                                      <Insets top="30.0" />
                                                   </padding>
                                                                </ToggleButton>
                                                                <ImageView fitHeight="35.0" fitWidth="35.0" preserveRatio="true">
                                                                    <image>
                                                                        <Image url="@../Icone/fire.png" />
                                                                    </image>
                                                                    <StackPane.margin>
                                                                        <Insets top="5.0" />
                                                                    </StackPane.margin>
                                                                </ImageView>
                                                            </children>
                                                        </StackPane>

                                                        <StackPane alignment="TOP_CENTER">
                                                            <children>
                                                                <ToggleButton fx:id="bulkButton" prefHeight="70.0" prefWidth="250.0" text="Massa muscolare" textFill="WHITE">
                                                                    <font>
                                                                        <Font size="18.0" />
                                                                    </font>
                                                   <padding>
                                                      <Insets top="30.0" />
                                                   </padding>
                                                                </ToggleButton>
                                                                <ImageView fitHeight="35.0" fitWidth="35.0" preserveRatio="true">
                                                                    <image>
                                                                        <Image url="@../Icone/biceps.png" />
                                                                    </image>
                                                                    <StackPane.margin>
                                                                        <Insets top="5.0" />
                                                                    </StackPane.margin>
                                                                </ImageView>
                                                            </children>
                                                        </StackPane>
                                                    </children>
                                                </VBox>

                                                <!-- Colonna destra -->
                                                <VBox alignment="TOP_CENTER" spacing="15.0">
                                                    <children>
                                                        <StackPane alignment="TOP_CENTER">
                                                            <children>
                                                                <ToggleButton fx:id="mantainButton" prefHeight="70.0" prefWidth="250.0" text="Mantenere" textFill="WHITE">
                                                                    <font>
                                                                        <Font size="18.0" />
                                                                    </font>
                                                   <padding>
                                                      <Insets top="30.0" />
                                                   </padding>
                                                                </ToggleButton>
                                                                <ImageView fitHeight="35.0" fitWidth="35.0" preserveRatio="true">
                                                                    <image>
                                                                        <Image url="@../Icone/balance.png" />
                                                                    </image>
                                                                    <StackPane.margin>
                                                                        <Insets top="5.0" />
                                                                    </StackPane.margin>
                                                                </ImageView>
                                                            </children>
                                                        </StackPane>

                                                        <StackPane alignment="TOP_CENTER">
                                                            <children>
                                                                <ToggleButton fx:id="toneButton" prefHeight="70.0" prefWidth="250.0" text="Tonificare" textFill="WHITE">
                                                                    <font>
                                                                        <Font size="18.0" />
                                                                    </font>
                                                   <padding>
                                                      <Insets top="30.0" />
                                                   </padding>
                                                                </ToggleButton>
                                                                <ImageView fitHeight="35.0" fitWidth="35.0" preserveRatio="true">
                                                                    <image>
                                                                        <Image url="@../Icone/women.png" />
                                                                    </image>
                                                                    <StackPane.margin>
                                                                        <Insets top="5.0" />
                                                                    </StackPane.margin>
                                                                </ImageView>
                                                            </children>
                                                        </StackPane>
                                                    </children>
                                                </VBox>
                                            </children>
                                        </HBox>
                                    </children>
                                </VBox>

                                <!-- LIVELLO DI ATTIVITÀ -->
                                <VBox alignment="CENTER" spacing="10.0">
                                    <children>
                                        <Text fill="WHITE" text="Quale è il tuo livello di attività attuale?">
                                            <font>
                                                <Font size="20.0" />
                                            </font>
                                        </Text>
                                        <ComboBox fx:id="currLevel" prefHeight="50.0" prefWidth="520.0" promptText="Seleziona il tuo livello" />
                                    </children>
                                </VBox>

                                <!-- FREQUENZA ALLENAMENTI -->
                                <VBox alignment="CENTER" spacing="10.0">
                                    <children>
                                        <Text fill="WHITE" text="Quante volte a settimana vuoi allenarti?">
                                            <font>
                                                <Font size="20.0" />
                                            </font>
                                        </Text>

                                        <HBox alignment="CENTER" spacing="10.0">
                                            <children>
                                                <ToggleButton fx:id="twoButton" prefHeight="50.0" prefWidth="120.0" text="2 volte" textFill="WHITE">
                                                    <font>
                                                        <Font size="18.0" />
                                                    </font>
                                                </ToggleButton>
                                                <ToggleButton fx:id="threeButton" prefHeight="50.0" prefWidth="120.0" text="3 volte" textFill="WHITE">
                                                    <font>
                                                        <Font size="18.0" />
                                                    </font>
                                                </ToggleButton>
                                                <ToggleButton fx:id="fourButton" prefHeight="50.0" prefWidth="120.0" text="4 volte" textFill="WHITE">
                                                    <font>
                                                        <Font size="18.0" />
                                                    </font>
                                                </ToggleButton>
                                                <ToggleButton fx:id="fiveButton" prefHeight="50.0" prefWidth="120.0" text="5 volte" textFill="WHITE">
                                                    <font>
                                                        <Font size="18.0" />
                                                    </font>
                                                </ToggleButton>
                                                <ToggleButton fx:id="sixButton" prefHeight="50.0" prefWidth="120.0" text="6 volte" textFill="WHITE">
                                                    <font>
                                                        <Font size="18.0" />
                                                    </font>
                                                </ToggleButton>
                                            </children>
                                        </HBox>
                                    </children>
                                </VBox>

                                <!-- BOTTONE RICHIESTA -->
                                <Button fx:id="requestButton" onMouseClicked="#onClickWorkoutRequest" prefHeight="50.0" prefWidth="520.0" styleClass="toggle-button" text="Richiedi scheda">
                                    <font>
                                        <Font size="18.0" />
                                    </font>
                                </Button>
                        <Label fx:id="errorLabel" textFill="WHITE">
                           <font>
                              <Font size="18.0" />
                           </font>
                        </Label>

                            </children>
                        </VBox>
                    </content>
                </ScrollPane>

            </children>
         <StackPane.margin>
            <Insets bottom="50.0" top="50.0" />
         </StackPane.margin>
        </VBox>
    </children>
</StackPane>
